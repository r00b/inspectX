= render 'layouts/app_navigation'
%section
  .container
    = simple_form_for(@inspection) do |f|
      .row
        .col-md-12
          = f.error_notification
      .row
        .col-md-12
          %h3.text-left Mechanic Info
          .col-md-3
            %h4
              = 'NAME:'
              = @mechanic.andand.user.andand.name
          .col-md-3
            %h4
              = 'SPECIALITY:'
              = @mechanic.speciality
          .col-md-3
            %h4
              = 'ZIP:'
              = @mechanic.zip
          .col-md-3
            %h4
              = 'PRICE:'
              = @mechanic.price
      .row
        .col-md-6
          %h3.text-left Buyer Info
          .form-inputs
            %span Your Name - First and Last
            %span Your Address
            %span Your Phone
            %span Your Email
        .col-md-6
          %h3.text-left Vehicle Info
          .form-inputs
            %span Vehicle Year
            = f.input :vehicle_year,  as: :select_picker, collection: [*1960..2016]
            %span Vehicle Make
            = f.input :vehicle_make,  as: :select_picker, collection: Edmunds::Make.new.find_all.map { |user| user['name'] }
            %span Vehicle Model
            - vehicle_models = []
            - Edmunds::Make.new.find_all.map do |auto|
              - auto['models'].map do |model|
                - vehicle_models << model['name']
            = f.input :vehicle_model, as: :select_picker, collection: vehicle_models
      .row
        .col-md-6
          %h3.text-left Inspection Info
          .form-inputs
            %span Seller Name
            %span Inspection Location
            = f.input :location
            %span Inspection Date
            = f.input :date
            %span Inspection Time
            = f.input :time
        .col-md-6
          %h3.text-left Payment
          .form-inputs
            %span Mechanic Rate
            %span Button for confirm and pay
            .form-actions
              = f.button :submit